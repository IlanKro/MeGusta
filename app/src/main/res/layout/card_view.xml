<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >

    <androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="200dp"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp">

    <TextView
        android:id="@+id/item_username_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="username:"
    />
    <TextView
        android:id="@+id/item_name_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="item name:"
    />
    <ImageView
        android:id="@+id/item_photo_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/item_photo"
        android:text="blank"
    />
    <TextView
        android:id="@+id/item_price_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="price:"
    />
    <TextView
        android:id="@+id/item_category_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="category:"
      />
    <TextView
        android:id="@+id/item_rent_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="rent?"
    />
    <TextView
        android:id="@+id/item_location_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="location:"
    />
    <TextView
        android:id="@+id/item_phone_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="phone:"
    />

    </androidx.cardview.widget.CardView>
</LinearLayout>
